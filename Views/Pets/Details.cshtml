@model E_zavetisce.Models.Pet

@{
    ViewData["Title"] = "Details";
}

<div class="pet-details p-3">
    <h1>Podrobnosti:</h1>

    <div>
        <dl class="row">
            <dt class="col-sm-2 fs-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10 fs-3">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <hr />
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateAdded)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateAdded)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Type)
            </dd>
        </dl>
    </div>
    <div>
        @if (ViewData["isEmployee"] != null && (bool)ViewData["isEmployee"])
        {
            <a asp-action="Edit" asp-route-id="@Model.PetID" class="btn btn-success">Uredi</a>
            <a asp-action="Delete" asp-route-id="@Model.PetID" class="btn btn-danger">Izbri≈°i</a>
        }
        else
        {
            <a asp-action="Create" asp-controller="Adoption" asp-route-id="@Model.PetID" class="btn btn-primary">Posvoji</a>
        }
        <a asp-action="Index" class="btn btn-secondary">Nazaj na seznam</a>
    </div>
</div>