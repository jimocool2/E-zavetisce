@model E_zavetisce.Models.Adoption

@{
    ViewData["Title"] = "Posvojitev";
    var pet = ViewData["Pet"] as E_zavetisce.Models.Pet;
}
<div class="p-3">
    <h1>Posvoji:</h1>

    <h4>@pet.Name</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <p>Informacije o posvojitvi:</p>
            <p>@pet.Type</p>
            <hr>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <input type="hidden" name="id" value="@pet.PetID" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Posvoji" class="btn btn-primary" />
                    <a asp-controller="Pets" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>